read -d '' cat << eom
all
notebook
off
eom

result=`echo -e "$cat" | dmenu $dmenu_params -p "Choose Monitor Configuration"`

case "$result" in
    "All Monitors") xrandr --output HDMI3 --auto --left-of LVDS1 --output HDMI1 --auto --left-of LVDS1
        echo "All Monitors"
        ;;
    "Notebook only") xrandr --output HDMI3 --off --output HDMI1 --off
        echo "Notebook only"
        ;;
    "Off") xset dpms force off
        ;;
esac
